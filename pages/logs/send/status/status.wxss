/* pages/home/wait/wait.wxss */
.copyResult{
	width: 250rpx;
	height: 80rpx;
	position: fixed;
	top: 31%;
	left: 50%;
	margin: 0;
	margin-left: -124rpx;
	z-index: 5;
}
.showHead{
	min-height: 410rpx;
}
.iconBox {
    padding: 100rpx 0 100rpx;
    text-align: center;
    color: #fff;
    font-size: 18px;
    font-weight: 100;
}

.iconBox image {
    width: 110rpx;
    height: 110rpx;
    margin: 0 40rpx 40rpx;
}

.iconBox text {
    font-size: 24rpx;
    color: #becbd8;
    line-height: 48rpx;
}


.iconBox.wechatBox .chatNum{
	color: #AAC66B;
}
.iconBox.wechatBox .text image{
	width: 120rpx;
	height: 44rpx;
	margin: 0;
	transform: translateX(20%) translateY(20%);
}
.ask_answer {
    display: flex;
    padding: 50rpx 40rpx 0;
	position: relative;
}

.ask_answer>view {
    flex: 1;
    border: 2rpx dashed #aac66b;
    border-radius: 16rpx;
	padding:84rpx 40rpx 60rpx;
	text-align: center;
	position: relative;
	box-sizing: border-box;
	max-width: 50%;
}
.ask_answer .ask{
	margin-right: 20rpx;
}
.ask_answer .answer{
	margin-left: 20rpx;
}
.userImgBox {
    position: absolute;
    top: -66rpx;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 6rpx solid #aac66b;
    left: 50%;
    margin-left: -65rpx;
	overflow: hidden
}


.ask_answer.succ .ask{
    border-radius: 16rpx 0 0 16rpx;
	border-right: 0;
	margin-right: 0;
}
.ask_answer.succ .answer{
    border-radius:  0 16rpx 16rpx 0;
	border-left: 0;
	margin-left: 0;
}
 
.ask_answer.succ .ask .userImgBox{
	left: 85%;
}
.ask_answer.succ .answer .userImgBox{
	left:15%;
}

.ask_answer .userName{
	font-size: 24rpx;
	color: #F6FF00;
	line-height: 36rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	width: 100%;
	white-space: nowrap;
}
.ask_answer .type{
	color:#fff ;
	font-size:40rpx ;
	line-height: 80rpx;
}
.ask_answer .cont{
	font-size: 28rpx;
	color: #F1F5F9;
	text-align: left;
	line-height: 46rpx;
	font-weight: 100
}

.ask_answer .result{
	width: 200rpx;
	height: 200rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -100rpx;
	margin-top: -75rpx;
}
.goHome{
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #4A5360;
	font-size: 28rpx;
	color: #fff;
	text-align: center;
	display: flex;
	line-height: 72rpx;
}
.goHome go-ans-or-ask{
	flex:1;
	margin: 40rpx;
	background: #aac66b;
	border-radius: 8rpx;
}
.goHome .goAsk{
	margin-right: 20rpx;
}
.goHome .goAnswer{
	margin-left: 20rpx;
}