page {
    height: 100%;
    background: #37404e;
}
.placeClass{
	font-size: 32rpx;
	color: #D9E2EA;
}
.flex1_6 {
    display: flex;
}

.flex1_6 .flex1 {
    flex: 1;
    margin-right: 10rpx;
}

.flex1_6 .flex6 {
    flex: 6;
}

.ask{
	height: 100%;
}
.ask .ask_tips{
	height: 43%;
	color: #F1F5F9;
	font-size: 28rpx;
	padding: 0 90rpx;
}
.ask .ask_tips text{
	display: block
}
.ask .ask_tips .tips_tit{
	font-size: 48rpx;
	text-align: center;
	line-height: 170rpx;
}
.ask .ask_tips .tips_item{
	font-size: 28rpx;
	line-height: 48rpx;
	font-family: MicrosoftYaHeiLight;
	font-weight: 100;
}
.ask .askBox{
	height: 57%;
	background:  #F1F5F9;
	padding: 0 40rpx;
}
.ask .askBox .ask_edit{
	position: relative;
	top: -400rpx;
	padding: 50rpx;
	background: #aac66b;
	border-radius: 8rpx;
	box-shadow: 0 8rpx 8rpx #eee;
}
.ask .ask_user{
	position: absolute;
    top: -66rpx;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 6rpx solid #aac66b;
    left: 50%;
    margin-left: -65rpx;
	overflow: hidden
}
.ask .ask_edit .area{
	position: relative;
	padding-top: 50rpx;
	font-size: 38rpx;
	color: #fff;
}
.ask .ask_edit .area view{
	text-align: right;
	margin-top: 10rpx;
}
.ask .ask_edit .area image{
	position: absolute;
    top: 57%;
    width: 100%;
    height: 2rpx;
}
.ask .ask_edit .area .line2{
	top:95%;
}
.ask .ask_edit .area textarea{
	width: 100%;
	height: 100%;
	max-height: 100%;
	padding-top: 45rpx;
    line-height: 104rpx;
    font-size: 32rpx;
    color: #aac66b;
}










